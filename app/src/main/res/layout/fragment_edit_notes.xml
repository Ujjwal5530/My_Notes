<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/back_color"
    android:layout_height="match_parent"
    tools:context=".fragments.EditNotesFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="10dp"
        android:paddingEnd="10dp">

        <EditText
            android:id="@+id/editTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="#D1D1D1"
            android:background="@drawable/edit_text"
            android:fontFamily="@font/amaranth_italic"
            android:hint="Title..."
            android:maxLines="1"
            android:padding="15dp"
            android:textColorHint="#D1D1D1" />

        <EditText
            android:id="@+id/editSubtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_text"
            android:fontFamily="@font/amaranth_italic"
            android:hint="SubTitle..."
            android:textColor="#D1D1D1"
            android:maxLines="1"
            android:padding="15dp"
            android:textColorHint="#D1D1D1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/pGreen"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/green_dot"/>

            <ImageView
                android:id="@+id/pYellow"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/yellow_dot"/>

            <ImageView
                android:id="@+id/pOrange"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/orange_dot"/>

        </LinearLayout>

        <EditText
            android:id="@+id/editNotes"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_marginTop="10dp"
            android:gravity="start"
            android:textColor="#D1D1D1"
            android:background="@drawable/edit_text"
            android:fontFamily="@font/amaranth_italic"
            android:hint="Notes..."
            android:padding="15dp"
            android:textColorHint="#D1D1D1" />

    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_edit_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:backgroundTint="@color/orange_color"
        android:src="@drawable/ic_baseline_done_24"
        android:layout_gravity="bottom|end"
        tools:ignore="SpeakableTextPresentCheck" />

</FrameLayout>